{
    "compilerOptions": {
        "target": "es2015",
        "module": "es2015",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./src/dist",
        "rootDir": "./src",
        "removeComments": true,
        "sourceMap": true,
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017"
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}